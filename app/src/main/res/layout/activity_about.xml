<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context="com.example.rens.competitive_gol.Controller.Activities.AboutActivity">

    <EditText
        android:id="@+id/aboutUs"
        android:layout_width="326dp"
        android:layout_height="547dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:clickable="false"
        android:cursorVisible="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:inputType="textMultiLine"
        android:text="The Competitive Game of Life app is made by 5 students of the Radboud University Nijmegen. This app was created for one of the assignments. It quickly became a passion project. We put a lot of effort into this and we will keep trying to improve it. We would love to get feedback and please rate our app in the rating tab. Any credits for the brilliant game of Life go to John Conway."
        android:textSize="22sp"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintHorizontal_bias="0.509"
        tools:layout_editor_absoluteY="180dp" />
</android.support.constraint.ConstraintLayout>
