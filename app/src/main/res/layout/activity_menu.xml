<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/buttonAi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player vs AI" />

        <Button
            android:id="@+id/buttonPlayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:text="Player VS Player"
            tools:layout_conversion_absoluteHeight="48dp"
            tools:layout_conversion_absoluteWidth="150dp"
            tools:layout_conversion_absoluteX="116dp"
            tools:layout_conversion_absoluteY="127dp"
            tools:layout_editor_absoluteX="116dp"
            tools:layout_editor_absoluteY="127dp" />

        <Button
            android:id="@+id/buttonTut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:text="Tutorial"
            tools:layout_conversion_absoluteHeight="48dp"
            tools:layout_conversion_absoluteWidth="89dp"
            tools:layout_conversion_absoluteX="116dp"
            tools:layout_conversion_absoluteY="175dp"
            tools:layout_editor_absoluteX="116dp"
            tools:layout_editor_absoluteY="175dp" />

        <Button
            android:id="@+id/buttonSet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="3"
            android:text="Settings"
            tools:layout_conversion_absoluteHeight="48dp"
            tools:layout_conversion_absoluteWidth="89dp"
            tools:layout_conversion_absoluteX="116dp"
            tools:layout_conversion_absoluteY="223dp"
            tools:layout_editor_absoluteX="116dp"
            tools:layout_editor_absoluteY="223dp" />

        <Button
            android:id="@+id/buttonAb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="4"
            android:text="About"
            tools:layout_conversion_absoluteHeight="48dp"
            tools:layout_conversion_absoluteWidth="88dp"
            tools:layout_conversion_absoluteX="116dp"
            tools:layout_conversion_absoluteY="271dp"
            tools:layout_editor_absoluteX="116dp"
            tools:layout_editor_absoluteY="271dp" />
    </GridLayout>
</android.support.constraint.ConstraintLayout>